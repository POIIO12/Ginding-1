#include <iostream>
#include <string>
using namespace std;
double maxValue(double a, double b, double c) {
    if (a >= b && a >= c) return a;
    if (b >= a && b >= c) return b;
    return c;
}
double minValue(double a, double b, double c){
    if (a <= b && a <= c) return a;
    if (b <= a && b <= c) return b;
    return c;
}
bool isEven(int a){
    if(a % 2 == 0) return true;
}
bool isOdd(int a){
    if(a % 2 != 0) return true;
}
bool isPrime(int a){
    int n = a;
    int i = 2;
    int prime = 0;
    while(i < a){
        if(a % i == 0){
            prime++;
        }
        i++;
    }
    if(prime == 0){
        return true;
    }
    else return false;
}
double add(double a, double b){
    int c;
    c = a+b;
    return c;
}
double multiply(double a, double b){
    int c;
    c = a*b;
    return c;
}
double sum(int a, int b){
    int c;
    c = a;
    int d;
    d = 0;
    for(c <= b; c++;){
        d = d + c;
        c++;
    }
    return d;
}
//not similar to any other one I need two functions
bool prime(int x){
    for(int i = 2; i <=x; i++){
        if(x % i == 0) return false;
        else return true;
    }
}
void listPrimes(int x){
    for(int i = 2; i<=x;i++){
        if(prime(i)){
            cout << i << ", ";
        }
    }
}
double computeBill(string package, int hours){
    if (package == "platinum") {
    return 19.95;
    }
    else if (package == "gold") {
        if (hours > 20) {
            double total = 14.95 + (hours - 20);
            return total;
        }
        else {
            return 14.95;
        }
    }
    else if (package == "basic") {
        if (hours > 10) {
            double total = 9.95 + ((hours - 10) * 2);
            return total;
        }
        else {
            return 9.95;
        }
    }
}
char capital(char letter){
    char pi = letter - 32;
    return pi;
}
char makeCapital(char &letter2){
    letter2 = letter2 - 32;
    return letter2;
}
int swapValues(int &a, int &b){
    int c = a;
    a = b;
    b = c;
    return a, b;
}
int main()
{
	//Implement min and max functions.
	cout << maxValue(10, 2.2, 7) << endl;  // 10
